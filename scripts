vmname="vm1"
username="azuser"
pass="Azuser123456"
rg="user-jmgrfydxkubq"
sgname="jmgrfydxkubq"  

az vm create \
  --resource-group $rg \
  --name $vmname \
  --image MicrosoftWindowsServer:WindowsServer:2022-datacenter-g2:latest \
  --size Standard_DS2_v2 \
  --admin-username $username \
  --admin-password $pass \

az storage account create -n $sgname --resource-group $rg --sku Standard_LRS
az storage container create -n myfiles --account-name $sgname

